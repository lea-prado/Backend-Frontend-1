<!-- views/layouts/main.handlebars -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>{{title}}</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Mi Tienda</a>
      <!-- Bot칩n para ir a carrito en tiempo real -->
      <a class="btn btn-outline-light ms-auto" href="/cartrealtime">Carrito en Tiempo Real</a>
    </div>
  </nav>

  <div class="container py-4">
    {{{body}}}
  </div>

  <!-- Script para crear carrito autom치ticamente si no existe en localStorage -->
  <script>
    (async () => {
      if (!localStorage.getItem('cartId')) {
        try {
          const response = await fetch('/api/carts', { method: 'POST' });
          const data = await response.json();
          if (data.cart && data.cart._id) {
            localStorage.setItem('cartId', data.cart._id);
            console.log('Carrito creado autom치ticamente:', data.cart._id);
          } else {
            console.error('No se pudo crear el carrito:', data);
          }
        } catch (error) {
          console.error('Error al crear el carrito autom치ticamente:', error);
        }
      }
    })();
  </script>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

